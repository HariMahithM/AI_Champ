<Window x:Class="AI_Champ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Champ" Height="200" Width="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#DD1E1E1E"
        Topmost="True"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown">

    <Grid Margin="10">
        <StackPanel>
            <TextBox x:Name="InputBox" Height="30" Margin="0,0,0,10"/>
            <Button Content="Submit" Click="Submit_Click" />
            <TextBlock x:Name="OutputText" TextWrapping="Wrap" Margin="0,10,0,0" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
